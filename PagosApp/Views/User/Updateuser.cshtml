@model PagosApp.Models.User
@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<script src="~/Content/assets/js/core/jquery.validate.js" type="text/javascript"></script>
<script src="~/Content/assets/js/core/jquery.validate.unobtrusive.js" type="text/javascript"></script>





<script>
function SubmitForm() {

var r = confirm("Are you sure you want to submit?");
  if (r == false) {
    return false;
  }
}
</script>

<script type="text/javascript">
		$(function() {
		    // Switchery toggle
		    var switchery = document.querySelector('.switch');
		    var init = new Switchery(switchery, {color: '#03A9F4'});
		});
</script>

<div class="panel panel-flat">
    <div class="panel panel-flat">
        @using (Html.BeginForm("Updateuser", "User", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <fieldset class="content-group">
                @Html.ValidationSummary(true)

                <legend class="text-bold">Editar Usuario</legend>

                <p>
                    <span class="label border-left-danger label-striped text-grey">@ViewData["Error"]</span>
                </p>

                <div class="form-group">
                    @Html.LabelFor(model => model.Usuario, "Usuario:", new { @class = "control-label col-lg-2" })
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.Usuario, new { @Value = Model.Usuario, @class = "form-control", @readonly = "readonly" })
                    </div>
                    @Html.ValidationMessageFor(model => model.Usuario)
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, "Nombre de Usuario:", new { placeholder = "Nombre", @class = "control-label col-lg-2" })
                    <div class="col-lg-4">
                        @Html.TextBoxFor(model => model.Nombre, new { @Value = Model.Nombre, @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.Nombre)
                </div>

                <div class="form-group">
                    @Html.Label("Password: ", new { @class = "control-label col-lg-2" })
                    <div class="col-lg-4">
                        @Html.PasswordFor(model => model.Password, new { placeholder = "Password", @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.Password)
                </div>

                <div class="form-group">
                    @Html.Label("Reescribir Password: ", new { @class = "control-label col-lg-2" })
                    <div class="col-lg-4">
                        @Html.PasswordFor(model => model.ConfirmPassword, new { placeholder = "Reescribir Password", @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                </div>

                <div class="form-group">
                    @Html.Label("Estado:", new { @class = "control-label col-lg-2" })
                    <label class="checkbox-inline checkbox-switchery switchery-sm switchery-double">
                        Activo
                        @Html.CheckBoxFor(model => model.Estado, new { @checked = Model.Estado, @class = "switch" })
                        Desactivado
                    </label>
                </div>

                <div class="form-group">
                    @Html.Label("Rol:", new { @class = "control-label col-lg-2" })
                    <div class="col-lg-4">
                        @Html.DropDownListFor(model => model.rol, ViewData["Rol"] as List<SelectListItem>, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Empresa:", new { @class = "control-label col-lg-2" })
                    <div class="col-lg-4">
                        @Html.DropDownListFor(model => model.id_empresa, ViewData["Empresa"] as List<SelectListItem>, new { @class = "form-control" })
                    </div>
                </div>



                <div>
                    <button type="submit" class="btn btn-primary">Actualizar </button>
                </div>

            </fieldset>
        }
    </div>
</div>


