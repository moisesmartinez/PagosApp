                   }



            </div>

			<div class="col-lg-4">
				<!-- Clientes de Socios Caceenp -->
				<div class="panel bg-purple-400">
					<div class="panel-body">
						<div class="heading-elements">
							<ul class="icons-list">
							    <li><a href="@Url.Action("Index", "Service")"><i class="icon-arrow-right8"></i></a></li>
							</ul>
						</div>

						<h3 class="no-margin">Gestión de Servicios</h3>
						<br />
						<div class="text-muted text-size-small">Servicios de la Empresa</div>
