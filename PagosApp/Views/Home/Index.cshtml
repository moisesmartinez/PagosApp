@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- Dashboard content -->
<div class="row">
	<div class="col-lg-8">


		<!-- Quick stats boxes -->
		<div class="row">
            <div class="col-lg-4">
                
               @{ if (ViewBag.id_rol == 1)
                   {

                       	<!-- Usuarios de PagosApp -->
                        <div class="panel bg-teal-400">
                            <div class="panel-body">
                                <div class="heading-elements">
                                    <ul class="icons-list">
                                        <li><a href="@Url.Action("AdministrarUsuarios", "Home")"><i class="icon-arrow-right8"></i></a></li>
                                        
                                    </ul>
                                </div>

                                <h3 class="no-margin">Gestión de Usuarios</h3>
